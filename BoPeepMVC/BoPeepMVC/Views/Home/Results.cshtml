@model IEnumerable<BoPeepMVC.Models.Activity>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<head>
    <title>Bored to Death - Search Results(@Model.Count() Found)</title>
</head>
<body>
    <ul>
        @foreach (var activity in Model)
        {
        <li>
            <img src="https://via.placeholder.com/150" alt="@activity.Title" />
            <h2>@activity.Title</h2>
            <p>@activity.Rating</p>
            <p>@activity.Location</p>
            <p>@activity.Description</p>
            <a href="@activity.ExternalLink">CLICK HERE</a>
        </li>
        }
    </ul>
</body>