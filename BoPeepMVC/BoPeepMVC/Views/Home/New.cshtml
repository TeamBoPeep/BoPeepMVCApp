@model IEnumerable<BoPeepMVC.Models.Tag>

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <title>Bored To Death: The Boredom Killer</title>
</head>
<body>


    <form method="post">
        <h2>Add a New Activity</h2>
        <div class="input-container">
            <input type="text" placeholder="Title Required" class="fontTooSmall" align="left" name="title" />
        </div>
        <div class="input-container">
            <textarea class="fontTooSmall" rows="5" cols="30" name="description" placeholder="Description Required"></textarea>
        </div>
        <div class="input-container">
            <div>
                <input type="radio" name="location" value="indoor" /><label for="indoor">Indoor</label>
            </div>
            <div>
                <input type="radio" name="location" value="outdoor" /><label for="outdoor">Outdoor</label>
            </div>
            <div>
                <input type="radio" name="location" value="both" /><label for="both">Both</label>
            </div>
        </div>
        @foreach (var tag in Model)
        {
            <input type="checkbox" name="tagNames" id="tag\@tag.ID" value="@tag.Name" />
            <label class="column" for="tag\@tag.ID">@tag.Name</label>
        }
        <div class="input-container">
            <input type="url" placeholder="Link for More Info" class="fontTooSmall" name="externallink" />
        </div>
        <div class="input-container">
            <input type="url" placeholder="Header Image" class="fontTooSmall" name="imageurl" />
        </div>
        <button type="submit" class="fontTooSmall">Create</button>
    </form>
    <footer>
        <p><em>BoPeep Development &copy; 2020</em></p>
    </footer>
</body>