@model IEnumerable<BoPeepMVC.Models.Tag>

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <title>Bored To Death: The Boredom Killer</title>
</head>
<body>
    <h2>Add a New Activity</h2>

    <form method="post">
        <label for="title">Title</label><input type="text" name="title" />
        <br />
        <label for="description">Description</label>
        <br />
        <textarea name="description"></textarea>
        <br />
        <input type="radio" name="location" value="indoor" /><label for="indoor">Indoor</label>
        <br />
        <input type="radio" name="location" value="outdoor" /><label for="outdoor">Outdoor</label>
        <br />
        <input type="radio" name="location" value="both" /><label for="both">Both</label>
        <br />
        @foreach (var tag in Model)
        {
            <input type="checkbox" name="tagNames" id="tag\@tag.ID" value="@tag.Name" />
            <label class="column" for="tag\@tag.ID">@tag.Name</label>
        }

        <label for="externallink">Link to More Info</label>
        <br />
        <input type="url" name="externallink" />
        <label for="imageurl">Header Image</label>
        <br />
        <input type="url" name="imageurl" />
        <br />
        <button type="submit">Create</button>
    </form>
</body>