@model BoPeepMVC.Models.Activity

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<head>
    <title>Bored to Death - Activity</title>
</head>
<body>
    <h2>@Model.Title</h2>
    <p>@Model.Rating</p>
    @if (activity.ImageURL != null)
    {
        <img src="@activity.ImageURL" alt="@activity.Title" />
    }
    <p>@Model.Description</p>
    <p>@Model.Location</p>
    @if (activity.ExternalLink != null)
    {
        <a href="@activity.ExternalLink">CLICK HERE</a>
        <br />
    }
    <ul title="tags">
        @foreach (var t in Model.Tags)
        {
            <li>@t.Name</li>
        }
    </ul>
    <ul title="reviews">
        @foreach (var r in Model.Reviews)
        {
            <li>
                <p>@r.Description</p>
                <p><em>by @r.Name</em></p>
            </li>
        }
    </ul>
</body>